@page "/"

<PageTitle>BeFit</PageTitle>

<div class="container py-4">
    <h1 class="fw-bold mb-3">BeFit 💪</h1>

    <p class="lead">
        Zarządzaj swoimi treningami, ćwiczeniami i śledź postępy
        w jednym miejscu.
    </p>

    <hr />

    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">🏋️ Typy ćwiczeń</h5>
                    <p class="card-text">
                        Przeglądaj dostępne ćwiczenia i ich rodzaje.
                    </p>
                    <NavLink class="btn btn-primary" href="exercise-types">
                        Przejdź
                    </NavLink>
                </div>
            </div>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="col-md-4 mb-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">📅 Sesje treningowe</h5>
                            <p class="card-text">
                                Twórz i zarządzaj swoimi sesjami treningowymi.
                            </p>
                            <NavLink class="btn btn-primary" href="training-sessions">
                                Przejdź
                            </NavLink>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">📊 Statystyki</h5>
                            <p class="card-text">
                                Sprawdź swoje postępy z ostatnich 4 tygodni.
                            </p>
                            <NavLink class="btn btn-primary" href="statistics">
                                Zobacz
                            </NavLink>
                        </div>
                    </div>
                </div>
            </Authorized>

            <NotAuthorized>
                <div class="col-md-8 mt-3">
                    <div class="alert alert-info">
                        Zaloguj się lub zarejestruj, aby korzystać z pełnej funkcjonalności aplikacji.
                    </div>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>
